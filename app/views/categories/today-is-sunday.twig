{% extends '_layouts.portfolio' %}

{% block content %}
	<p>
		{% set garry = HTML.linkBlank('http://store.steampowered.com/app/4000/', "Garry's Mod") %}
		{% trans %}Un ensemble de tableaux à tendances relativement sombres. Faits à l'époque sur le {{ garry }}, ils représentent en quelque sorte mes premiers pas dans la photographie dans laquelle je me lancerai quelques temps plus tards.{% endtrans %}
	</p>

	<hr>

	{% for tableau in tableaux %}
		<figure class='tableau'>
			<h2>{{ tableau.name }}</h2>
			<div class='image-wrap'>
				{{ tableau }}
			</div>
			<figcaption>
				<strong>{{ 'Publiée le'|trans }} : {{ tableau.created_at }}</strong>
			</figcaption>
		</figure>
	{% endfor %}
{% endblock %}

{% block js %}
	{{ Acetone.scripts('builds/js/lazyload.js') }}
{% endblock %}
