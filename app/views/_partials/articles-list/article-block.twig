<article>
	<a href="{{ article.getPath('show') }}">
		<h3>{{ article.name }}</h3>
		<time class='relative'>{{ article.relativeDate }}</time>
		<time class='absolute'>{{ article.creationDate }}</time>
		<blockquote>{{ article.summary }}</blockquote>
		{% if article.tags %}
			<p class='block-light'>
				<strong>tags :</strong> {{ article.tags|join(', ') }}
			</p>
		{% endif %}
	</a>
</article>
